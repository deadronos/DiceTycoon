{
  "name": "dice-tycoon-ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "build:docs": "vite build --outDir docs --base=/DiceTycoon/",
    "update-docs": "npm run build:docs",
    "deploy": "npm run update-docs && git add docs && git commit -m \"chore: update docs\" || echo \"no changes to commit\" && git push"
  },
  "dependencies": {
    "@patashu/break_eternity.js": "github:Patashu/break_eternity.js",
    "break_infinity.js": "^1.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    
    "jsdom": "^26.1.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^0.34.0"
  },
  "type": "module",
  "vitest": {
    "test": {
      "environment": "jsdom",
      "setupFiles": [
        "tests/setupTests.ts"
      ]
    }
  }
}
