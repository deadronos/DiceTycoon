{
  "name": "dicetycoon",
  "version": "1.0.0",
  "description": "A simple task management web application built with vanilla HTML, CSS, and JavaScript",
  "main": "app.js",
  "scripts": {
    "dev": "python3 -m http.server 8000",
    "lint": "eslint *.js",
    "format": "prettier --write *.js *.css *.html",
    "format:check": "prettier --check *.js *.css *.html",
    "validate": "npm run format:check && npm run lint"
  },
  "keywords": ["task-manager", "vanilla-js", "localStorage", "static-web-app"],
  "author": "DiceTycoon",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-html": "^7.1.0"
  }
}