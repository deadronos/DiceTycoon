{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "resolveJsonModule": true
  },
  "typeRoots": ["./types", "./node_modules/@types"],
  "include": [
    "src",
    "tests",
    "types",
    "libs/@patashu/break_eternity.js/dist/break_eternity.cjs.js",
    "libs/@patashu/break_eternity.js/dist/break_eternity.esm.js",
    "libs/@patashu/break_eternity.js/dist/break_eternity.js"
  ]
}
